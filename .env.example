# Переменные окружения для терминального чата
# Скопируйте этот файл в .env и настройте под ваши нужды

# Основные настройки сервера
CHAT_HOST=0.0.0.0
CHAT_PORT=12345
CHAT_MAX_CONNECTIONS=100

# Безопасность
CHAT_ADMIN_PASSWORD=your_secure_admin_password_here
CHAT_ENABLE_PASSWORD_PROTECTION=true

# Файлы и логирование
CHAT_DATA_FILE=chat_data.json
CHAT_LOG_FILE=chat_server.log
CHAT_LOG_LEVEL=INFO

# Производительность
CHAT_SOCKET_TIMEOUT=30
CHAT_AUTO_SAVE_INTERVAL=60
CHAT_CLEANUP_INTERVAL=300

# Лимиты
CHAT_MAX_MESSAGE_LENGTH=1024
CHAT_MAX_ROOM_NAME_LENGTH=50
CHAT_MAX_USERNAME_LENGTH=30
CHAT_MAX_ROOMS_PER_USER=5

# Дополнительные функции
CHAT_ENABLE_ROOM_PERSISTENCE=true
CHAT_ENABLE_MESSAGE_HISTORY=true
CHAT_AUTO_DELETE_EMPTY_ROOMS=false